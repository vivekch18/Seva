{
  "version": 2,
  "builds": [
    {
      "src": "Frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "Frontend/build"
      }
    },
    {
      "src": "Backend/api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "^/api/(.*)",
      "dest": "/Backend/api/$1.js"
    },
    {
      "src": "/(.*)",
      "dest": "/Frontend/build/index.html"
    }
  ]
}
